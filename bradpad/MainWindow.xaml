<Window x:Class="bradpad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bradpad"
        mc:Ignorable="d"
        Title="bradpad"
        Height="350"
        Topmost="True">

    <Grid>

        <Grid Name="settingsPanel"
              ScrollViewer.CanContentScroll="True"
              Visibility="Hidden">

            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Name="settingsRowFButtons"
                               Height="6*" />
                <RowDefinition Name ="settingsRowFooter"
                               Height="3*" />
            </Grid.RowDefinitions>

            <ComboBox Name="appDropdown"
                      HorizontalAlignment="Center"
                      Grid.Row="0"
                      Margin="12"
                      VerticalContentAlignment="Center">
                <ComboBoxItem IsSelected="True">Select an Application</ComboBoxItem>
                <ComboBoxItem>1</ComboBoxItem>
            </ComboBox>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Name="F22Settings"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF55B35A"
                        Click="F22SettingsClicked"
                        Grid.Column="0" 
                        TextBlock.FontSize="32" />


                <Button Name="F23Settings"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FF559DB3"
                        Click="F23SettingsClicked"
                        Grid.Column="1" 
                        TextBlock.FontSize="32" />

                <Button Name="F24Settings"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="#FFB5B7B3"
                        Click="F24SettingsClicked"
                        Grid.Column="2" 
                        TextBlock.FontSize="32" />

            </Grid>

            <Grid Name="settingsFooter"
                  Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Button Name="helpButton"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="16"
                        Click="HelpButtonClicked"
                        Content="Help"
                        Grid.Column="2" />

                <Button Name="mainButton"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="16"
                        Click="MainButtonClicked"
                        Content="Main"
                        Grid.Column="3" />

                <Button Name="applicationsButton"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        Margin="16"
                        Padding="8"
                        Content="Configure Applications" />

                <CheckBox Name="foreGroundCheckBox"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Bottom"
                          Margin="16"
                          Click="ForegroundCheckBoxClicked"
                          Content="Application Always In Foreground"
                          IsChecked="False" />
            </Grid>

            <Grid Name="settingsActionFooter"
                  Grid.Row="2"
                  Visibility="Hidden">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <ComboBox Name="actionDropdown"
                      HorizontalAlignment="Center"
                      Grid.Column="1"
                      Margin="16"
                      VerticalContentAlignment="Center" />

                <Button Name="saveButton"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="16"
                        Click="ActionSubmitButtonClicked"
                        Content="Save"
                        Grid.Column="2" />

                <Button Name="cancelButton"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Margin="16"
                        Click="ReturnToSettings"
                        Content="Cancel"
                        Grid.Column="3" />

            </Grid>


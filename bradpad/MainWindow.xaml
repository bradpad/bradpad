<Window x:Class="bradpad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bradpad"
        mc:Ignorable="d"
        Title="bradpad" Height="350"
        Topmost="True">

    <Grid>

        <StackPanel Name="settingsPanel"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="0,0,0,0"
                    Visibility="Hidden"
                    Background="#FFEDEFF6" RenderTransformOrigin="0.5,0.5">

            <Button Name="mainButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="68"
                    Width="159"
                    Click="MainButtonClicked"
                    Content="Main" />

            <Button Name="applicationsButton" Height="44" Click="applicationsButtonClick" HorizontalAlignment="Right" VerticalAlignment="Top">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" >Applications Page</TextBlock>
            </Button>

            <CheckBox Name="foreGroundCheck" Content="Application Always In Foreground" HorizontalAlignment="Left"
                        VerticalAlignment="Top" Click="foreGroundButtonClicked" IsChecked="True" Height="20"/>


        </StackPanel>

        <StackPanel Name="applicationsPanel"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="0,0,0,0"
                    Orientation="Horizontal"
                    Visibility="Visible"
                    Background="#FFEDEFF6" RenderTransformOrigin="0.5,0.5">
            <TextBox Name ="addAppText" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="35" TextAlignment="Center" TextWrapping="Wrap" Text="Enter Application Name" Width="200" Background="#FFEDEFF6"/>
            <TextBox Name ="addAppLocation" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="35" Width="390" Margin="0,0,0,0" TextAlignment="Center" TextWrapping="Wrap" Text="Enter Application Location" Background="#FFEDEFF6"/>
            <Button Name="appButton" Height="39" Width="100" VerticalAlignment="Top" Click="appButtonClicked" Margin="0,0,0,0">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" >Enter</TextBlock>
            </Button>

            

            <Button Content="Settings" Click ="SettingsButtonClicked" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="54" Margin="0,0,0,0" Width="56"/>

        </StackPanel>

        <DockPanel Name="mainPanel"
                   Visibility="Hidden">

            <Button Name="settingsButton"
                    Height="68"
                    Click="SettingsButtonClicked"
                    Content="Settings"
                    DockPanel.Dock="Bottom" />

            <!--Grid is the last child because last child fills the rest of the window in DockPanel-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Name="F10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="F10ButtonClicked"
                        Content="Left none"
                        Grid.Column="0" />

                <Button Name="F11"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="F11ButtonClicked"
                        Content="Middle none"
                        Grid.Column="1" />

                <Button Name="F12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="F12ButtonClicked"
                        Content="Right none"
                        Grid.Column="2" />

            </Grid>

        </DockPanel>

    </Grid>

</Window>

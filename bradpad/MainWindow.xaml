<Window x:Class="bradpad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bradpad"
        mc:Ignorable="d"
        Title="bradpad" Height="350" Width="525"
        Topmost="True">

    <Grid>

        <StackPanel Name="settingsPanel"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="0,0,0,0"
                    Background="#FF6781F0"
                    Visibility="Hidden">

            <Button Name="mainButton"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="68"
                    Width="159"
                    Click="MainButtonClicked"
                    Content="Main" />

        </StackPanel>

        <DockPanel Name="mainPanel">

            <Button Name="settingsButton"
                    Height="68"
                    Click="SettingsButtonClicked"
                    Content="Settings"
                    DockPanel.Dock="Bottom" />

            <!--Grid is the last child because last child fills the rest of the window in DockPanel-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Name="F22"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="F22ButtonClicked"
                        Content="F22"
                        Grid.Column="0" />

                <Button Name="F23"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="F23ButtonClicked"
                        Content="F23"
                        Grid.Column="1" />

                <Button Name="F24"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="F24ButtonClicked"
                        Content="F24"
                        Grid.Column="2" />

            </Grid>

        </DockPanel>

    </Grid>

</Window>
